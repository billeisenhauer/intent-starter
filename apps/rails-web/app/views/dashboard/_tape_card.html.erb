<%# VHS Tape style recommendation card %>
<% confidence_class = case recommendation.confidence.confidence_rank
                      when 1 then "high"
                      when 2 then "medium"
                      else "low"
                      end %>
<% availability = AvailabilityService.for_title(recommendation.title) %>

<div class="vhs-tape animate-in">
  <div class="vhs-tape__cover">
    <div class="vhs-tape__spine">
      <span class="vhs-tape__spine-text">BW-<%= format('%04d', recommendation.title.id) %></span>
    </div>
    <div class="vhs-play-overlay">
      <div class="vhs-play-btn">
        <svg viewBox="0 0 24 24"><polygon points="5 3 19 12 5 21 5 3"/></svg>
      </div>
    </div>
  </div>
  <div class="vhs-tape__info">
    <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: var(--space-xs);">
      <h4 class="vhs-tape__title"><%= recommendation.title.name %></h4>
      <span class="vhs-confidence vhs-confidence--<%= confidence_class %>">
        <span class="vhs-confidence__bar">
          <span class="vhs-confidence__fill" style="width: <%= (recommendation.confidence.value * 100).round %>%;"></span>
        </span>
      </span>
    </div>
    <p class="vhs-tape__meta"><%= recommendation.title.title_type.upcase %></p>
    <div class="vhs-reasons">
      <% recommendation.reasons.first(2).each do |reason| %>
        <span class="vhs-reason"><%= truncate(reason.text, length: 20) %></span>
      <% end %>
    </div>
    <% if availability.platforms.any? %>
      <div style="margin-top: var(--space-sm);">
        <span class="vhs-availability vhs-availability--streaming">
          <span class="vhs-availability__dot"></span>
          <%= availability.platforms.first.upcase %>
        </span>
      </div>
    <% end %>
  </div>
</div>
