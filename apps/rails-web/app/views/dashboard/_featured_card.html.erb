<%# Featured recommendation card - first/top pick %>
<div class="featured-card animate-in">
  <div class="featured-cover">
    <div class="vhs-play-overlay">
      <div class="vhs-play-btn">
        <svg viewBox="0 0 24 24"><polygon points="5 3 19 12 5 21 5 3"/></svg>
      </div>
    </div>
  </div>
  <div class="featured-content">
    <span class="featured-badge">â˜… <%= recommendation.confidence.to_label.upcase %></span>
    <h3 class="featured-title"><%= recommendation.title.name %></h3>
    <p class="featured-meta">
      <%= recommendation.title.title_type.upcase %>
    </p>
    <div class="vhs-reasons" style="margin-bottom: var(--space-lg);">
      <% recommendation.reasons.each do |reason| %>
        <span class="vhs-reason"><%= reason.text %></span>
      <% end %>
    </div>
    <div class="featured-actions">
      <%= link_to "MARK WATCHED", "#", class: "vhs-btn vhs-btn--primary" %>
      <%= link_to "NOT INTERESTED", "#", class: "vhs-btn vhs-btn--ghost" %>
    </div>
  </div>
</div>

<style>
  .featured-card {
    grid-column: span 2;
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: 0;
    background: var(--vhs-dark);
    border: 2px solid var(--neon-magenta);
    border-radius: var(--radius-md);
    overflow: hidden;
    box-shadow: var(--glow-magenta);
  }

  .featured-card:hover {
    border-color: var(--neon-cyan);
    box-shadow: var(--glow-cyan);
  }

  .featured-cover {
    aspect-ratio: 2/3;
    background: linear-gradient(135deg, var(--vhs-medium), var(--vhs-dark));
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 4rem;
  }

  .featured-cover::before {
    content: 'ðŸŽ¬';
    opacity: 0.3;
  }

  .featured-content {
    padding: var(--space-xl);
    display: flex;
    flex-direction: column;
    justify-content: center;
    background: linear-gradient(90deg, var(--vhs-dark), var(--vhs-darker));
  }

  .featured-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-xs) var(--space-md);
    background: var(--neon-magenta);
    color: var(--vhs-black);
    font-family: var(--font-display);
    font-size: 0.85rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    border-radius: var(--radius-sm);
    margin-bottom: var(--space-md);
    width: fit-content;
  }

  .featured-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: var(--space-sm);
    color: var(--text-primary);
  }

  .featured-meta {
    font-family: var(--font-display);
    font-size: 1rem;
    color: var(--text-muted);
    letter-spacing: 0.1em;
    margin-bottom: var(--space-lg);
  }

  .featured-actions {
    display: flex;
    gap: var(--space-md);
  }

  @media (max-width: 1024px) {
    .featured-card {
      grid-column: span 1;
      grid-template-columns: 1fr;
    }
    .featured-cover { aspect-ratio: 16/9; }
  }
</style>
