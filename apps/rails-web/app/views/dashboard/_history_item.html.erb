<%# Recent viewing history item %>
<div class="history-item animate-in">
  <div class="history-item__icon">
    <% if record.fully_watched %>
      ✓
    <% elsif record.progress && record.progress > 0 %>
      ▶
    <% else %>
      ◉
    <% end %>
  </div>

  <div class="history-item__content">
    <div class="history-item__title"><%= record.title.name %></div>
    <div class="history-item__meta">
      <span class="history-item__member"><%= record.member.name %></span>
      <span class="history-item__separator">•</span>
      <span class="history-item__type"><%= record.title.title_type.upcase %></span>
      <% if record.progress && record.progress < 1.0 %>
        <span class="history-item__separator">•</span>
        <span class="history-item__progress"><%= (record.progress * 100).round %>%</span>
      <% end %>
    </div>
  </div>

  <div class="history-item__time">
    <%= time_ago_in_words(record.updated_at) %> AGO
  </div>
</div>

<style>
  .history-item {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-md) var(--space-lg);
    background: var(--vhs-dark);
    border: 1px solid var(--vhs-light);
    border-radius: var(--radius-md);
    transition: border-color 0.2s, box-shadow 0.2s;
  }

  .history-item:hover {
    border-color: var(--neon-cyan);
    box-shadow: inset 0 0 20px rgba(0, 245, 255, 0.05);
  }

  .history-item__icon {
    width: 36px;
    height: 36px;
    background: var(--vhs-medium);
    border-radius: var(--radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-display);
    font-size: 1rem;
    color: var(--neon-green);
    flex-shrink: 0;
  }

  .history-item__content {
    flex: 1;
    min-width: 0;
  }

  .history-item__title {
    font-family: var(--font-display);
    font-size: 1rem;
    letter-spacing: 0.05em;
    color: var(--text-primary);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-bottom: var(--space-xs);
  }

  .history-item__meta {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-family: var(--font-display);
    font-size: 0.75rem;
    color: var(--text-muted);
    letter-spacing: 0.1em;
  }

  .history-item__separator {
    color: var(--vhs-light);
  }

  .history-item__member {
    color: var(--neon-cyan);
  }

  .history-item__progress {
    color: var(--neon-amber);
  }

  .history-item__time {
    font-family: var(--font-display);
    font-size: 0.75rem;
    color: var(--text-muted);
    letter-spacing: 0.1em;
    white-space: nowrap;
    flex-shrink: 0;
  }
</style>
