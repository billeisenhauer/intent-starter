<%# Subscription value assessment card %>
<% value_class = if assessment.should_cancel?
                   "low"
                 elsif assessment.underutilized?
                   "medium"
                 else
                   "high"
                 end %>

<div class="subscription-card subscription-card--<%= value_class %> animate-in">
  <div class="subscription-card__header">
    <div class="subscription-card__logo">
      <%= assessment.subscription.platform.first(2).upcase %>
    </div>
    <div class="subscription-card__info">
      <h4 class="subscription-card__name"><%= assessment.subscription.platform %></h4>
      <span class="subscription-card__cost"><%= number_to_currency(assessment.subscription.monthly_cost) %>/mo</span>
    </div>
    <span class="subscription-card__value subscription-card__value--<%= value_class %>">
      <% if assessment.should_cancel? %>
        LOW VALUE
      <% elsif assessment.underutilized? %>
        REVIEW
      <% else %>
        GOOD VALUE
      <% end %>
    </span>
  </div>

  <div class="subscription-card__stats">
    <div class="subscription-card__stat">
      <span class="subscription-card__stat-value"><%= assessment.platform_watches %></span>
      <span class="subscription-card__stat-label">WATCHED</span>
    </div>
    <div class="subscription-card__stat">
      <span class="subscription-card__stat-value"><%= (assessment.usage_percentage * 100).round %>%</span>
      <span class="subscription-card__stat-label">USAGE</span>
    </div>
    <div class="subscription-card__stat">
      <span class="subscription-card__stat-value"><%= assessment.days_since_use %></span>
      <span class="subscription-card__stat-label">DAYS IDLE</span>
    </div>
  </div>

  <% if assessment.cons.any? %>
    <div class="subscription-card__recommendation">
      <span class="subscription-card__recommendation-icon">ðŸ’¡</span>
      <%= assessment.cons.first %>
    </div>
  <% elsif assessment.pros.any? %>
    <div class="subscription-card__recommendation subscription-card__recommendation--positive">
      <span class="subscription-card__recommendation-icon">âœ“</span>
      <%= assessment.pros.first %>
    </div>
  <% end %>
</div>

<style>
  .subscription-card {
    background: var(--vhs-dark);
    border: 1px solid var(--vhs-light);
    border-radius: var(--radius-md);
    padding: var(--space-lg);
  }

  .subscription-card--high { border-color: var(--neon-green); }
  .subscription-card--medium { border-color: var(--neon-amber); }
  .subscription-card--low { border-color: var(--neon-magenta); }

  .subscription-card__header {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-lg);
  }

  .subscription-card__logo {
    width: 48px;
    height: 48px;
    background: var(--vhs-medium);
    border-radius: var(--radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-display);
    font-size: 1rem;
    letter-spacing: 0.1em;
    color: var(--text-primary);
  }

  .subscription-card__info {
    flex: 1;
  }

  .subscription-card__name {
    font-family: var(--font-display);
    font-size: 1.1rem;
    letter-spacing: 0.1em;
    margin-bottom: var(--space-xs);
  }

  .subscription-card__cost {
    font-family: var(--font-display);
    font-size: 0.9rem;
    color: var(--text-muted);
    letter-spacing: 0.05em;
  }

  .subscription-card__value {
    font-family: var(--font-display);
    font-size: 0.75rem;
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-sm);
    letter-spacing: 0.1em;
  }

  .subscription-card__value--high { background: var(--neon-green); color: var(--vhs-black); }
  .subscription-card__value--medium { background: var(--neon-amber); color: var(--vhs-black); }
  .subscription-card__value--low { background: var(--neon-magenta); color: var(--vhs-black); }

  .subscription-card__stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-md);
    padding: var(--space-md) 0;
    border-top: 1px solid var(--vhs-light);
    border-bottom: 1px solid var(--vhs-light);
  }

  .subscription-card__stat {
    text-align: center;
  }

  .subscription-card__stat-value {
    display: block;
    font-family: var(--font-display);
    font-size: 1.5rem;
    color: var(--neon-cyan);
    text-shadow: 0 0 10px var(--neon-cyan);
  }

  .subscription-card__stat-label {
    font-family: var(--font-display);
    font-size: 0.7rem;
    color: var(--text-muted);
    letter-spacing: 0.15em;
  }

  .subscription-card__recommendation {
    margin-top: var(--space-md);
    padding: var(--space-sm) var(--space-md);
    background: var(--vhs-medium);
    border-radius: var(--radius-sm);
    font-size: 0.9rem;
    color: var(--text-secondary);
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .subscription-card__recommendation--positive {
    border-left: 2px solid var(--neon-green);
  }

  .subscription-card__recommendation-icon {
    font-size: 1.1rem;
  }
</style>
